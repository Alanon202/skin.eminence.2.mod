<?xml version="1.0" encoding="UTF-8"?>
<window>
    <zorder>0</zorder>
    <onload condition="Library.IsScanningVideo + Skin.HasSetting(UpdateArt.Enabled)">SetProperty(UpdateArt,1)</onload>
    <onunload condition="!String.IsEmpty(Window.Property(UpdateArt)) + Skin.HasSetting(UpdateArt.Enabled)">XBMC.RunScript(script.artwork.downloader,mode=custom,silent=true,clearlogo,clearart,thumb,banner,tvthumb,seasonbanner,seasonthumb,seasonposter,discart)</onunload>
    <onunload condition="!String.IsEmpty(Window.Property(UpdateArt)) + Skin.HasSetting(UpdateArt.Enabled)">ClearProperty(UpdateArt)</onunload>
    <controls>
        <control type="group">

            <control type="group">
                <visible>!Window.IsVisible(home) + !Window.IsVisible(weather)</visible>
                <visible>!Window.IsVisible(DialogNotification.xml)</visible>
                <animation effect="slide" start="0,64" end="0" time="125">WindowOpen</animation>
                <animation effect="slide" end="0,64" start="0" time="125">WindowClose</animation>
                <control type="image">
                    <left>0</left>
                    <posy>64r</posy>
                    <width>100%</width>
                    <height>64</height>  
                    <aspectratio>scale</aspectratio>
                    <texture colordiffuse="DialogBG">common/white.png</texture>
                    <visible>Window.IsVisible(fullscreenvideo)</visible>
                </control>
                <control type="image">
                    <posx>16</posx>
                    <posy>48r</posy>
                    <width>32</width>
                    <height>32</height>
                    <texture colordiffuse="LineLabel">common/info.png</texture>
                </control>
                <control type="label">
                    <bottom>16</bottom>
                    <left>48</left>
                    <right>side</right>
                    <height>32</height>
                    <font>Font-RSS</font>
                    <textcolor>LineLabel</textcolor>
                    <label>[COLOR=$VAR[HighlightColor2]]$INFO[Control.GetLabel(30),   ,]$INFO[Control.GetLabel(32),   ,%][/COLOR]$INFO[Control.GetLabel(31),   ,]</label>
                </control>
            </control>
            <control type="group">
                <visible>Window.IsVisible(home)</visible>
                <visible>!Window.IsActive(DialogNotification.xml)</visible>
                <bottom>266</bottom>
                <!-- <animation effect="slide" tween="quadratic" easing="in" time="200" end="0,266" start="0">Hidden</animation> -->
                <animation effect="slide" start="-1200" end="0" time="250">WindowOpen</animation>
                <animation effect="slide" end="-1200" start="0" time="250">WindowClose</animation>
            
                <animation effect="slide" end="0,160" condition="Skin.String(HomeStyle, textonly)">Conditional</animation>
               
                <include condition="Skin.String(HomeStyle, textonly)">Home_Dialogs_TextOnly_Animate</include>

                <include condition="!Skin.String(HomeStyle, textonly) + !Skin.String(HomeStyle, vertical)">Home_Dialogs_Icons_Animate</include>
				
                <animation effect="slide" end="206,266" condition="Skin.String(HomeStyle, vertical)">Conditional</animation>
				
                <control type="image">
                    <left>16</left>
                    <bottom>16</bottom>
                    <width>32</width>
                    <height>32</height>
                    <texture colordiffuse="LineLabel">common/info.png</texture>
                </control>
                <control type="label">
                    <bottom>16</bottom>
                    <left>48</left>
                    <width>1040</width>
                    <height>32</height>
                    <font>Font-RSS</font>
                    <textcolor>LineLabel</textcolor>
                    <scroll>false</scroll>
                    <label>[COLOR=$VAR[HighlightColor2]]$INFO[Control.GetLabel(30),   ,]$INFO[Control.GetLabel(32),   ,%][/COLOR]$INFO[Control.GetLabel(31),   ,]</label>
                </control>
            </control>
        </control>
        <control type="label" id="30"><visible>false</visible></control>
        <control type="label" id="31"><visible>false</visible></control>
        <control type="progress" id="32">
            <visible>false</visible>
            <left>-1000</left>
            <width>1</width>
            <height>1</height>
        </control>
    </controls>

</window>