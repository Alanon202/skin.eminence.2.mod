<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol></defaultcontrol>

    <controls>
        <control type="group">
            <include>Animation_FadeIn</include>
            <include>Animation_FadeOut</include>
            <left>150</left>
            <top>75</top>
            <width>1620</width>
            <height>360</height>
			<visible>!VideoPlayer.Content(livetv)</visible>
            <!-- Background -->
            <control type="image">
                <texture colordiffuse="df000000">common/white.png</texture>
				<visible>String.IsEqual(Skin.CurrentColourTheme,SKINDEFAULT) | !String.IsEqual(Skin.CurrentColourTheme, Light)</visible>
            </control>
			
            <control type="image">
                <texture colordiffuse="6ff0f0f0">common/white.png</texture>
				<visible>String.IsEqual(Skin.CurrentColourTheme,Light)</visible>
            </control>
			
            <control type="grouplist">
                <left>52</left>
                <top>20</top>
                <visible>!VideoPlayer.Content(livetv)</visible>
                <control type="label">
                    <width>1600</width>
                    <height>50</height>
                    <aligny>bottom</aligny>
                    <label>$INFO[Player.Process(videodecoder),[COLOR Selected]$LOCALIZE[31774]:[/COLOR] ]$VAR[VideoHWDecoder, (,)]</label>
                    <font>Font-ListInfo</font>
                    <visible>Player.HasVideo</visible>
                </control>
				
                <control type="label">
                    <width>1600</width>
                    <height>50</height>
                    <aligny>bottom</aligny>
                    <label>$INFO[Player.Process(pixformat),[COLOR Selected]$LOCALIZE[31773]:[/COLOR] ]</label>
                    <font>Font-ListInfo</font>
                    <visible>Player.HasVideo</visible>
                </control>
				
                <control type="label">
                    <width>1600</width>
                    <height>50</height>
                    <aligny>bottom</aligny>
                    <label>$INFO[Player.Process(deintmethod),[COLOR Selected]$LOCALIZE[16038]:[/COLOR] ]</label>
                    <font>Font-ListInfo</font>
                    <visible>Player.HasVideo</visible>
                </control>
				
                <control type="label">
                    <width>1600</width>
                    <height>50</height>
                    <aligny>bottom</aligny>
                    <label>$INFO[Player.Process(videowidth),[COLOR Selected]$LOCALIZE[38031]:[/COLOR] ,x]$INFO[Player.Process(videoheight),, px]$INFO[Player.Process(videodar),$COMMA , AR]$INFO[Player.Process(videofps),$COMMA , FPS]</label>
                    <font>Font-ListInfo</font>
                    <visible>Player.HasVideo</visible>
                </control>
				
                <control type="label">
                    <width>1600</width>
                    <height>50</height>
                    <aligny>bottom</aligny>
                    <label>[COLOR Selected]$LOCALIZE[460]:[/COLOR] $INFO[Player.Process(audiochannels),,$COMMA ]$INFO[Player.Process(audiodecoder)]$INFO[Player.Process(audiobitspersample),$COMMA , bits]$INFO[Player.Process(audiosamplerate),$COMMA , Hz]</label>
                    <font>Font-ListInfo</font>
                </control>
				
                <control type="label">
                    <width>1600</width>
                    <height>50</height>
                    <aligny>bottom</aligny>
                    <label>$INFO[System.Memory(used.percent),[COLOR Selected]RAM:[/COLOR] ,       ]$INFO[System.CpuUsage,[COLOR Selected]$LOCALIZE[13271][/COLOR] ]</label>
                    <font>Font-ListInfo</font>
                </control>
            </control>

        </control>
        
		<control type="group">
            <include>Animation_FadeIn</include>
            <include>Animation_FadeOut</include>
            <left>150</left>
            <top>75</top>
            <width>1620</width>
            <height>920</height>
			<visible>VideoPlayer.Content(livetv)</visible>
			
            <!-- Background -->
            <control type="image">
                <texture colordiffuse="df000000">common/white.png</texture>
				<visible>String.IsEqual(Skin.CurrentColourTheme,SKINDEFAULT) | !String.IsEqual(Skin.CurrentColourTheme, Light)</visible>
            </control>
			
            <control type="image">
                <texture colordiffuse="6ff0f0f0">common/white.png</texture>
				<visible>String.IsEqual(Skin.CurrentColourTheme,Light)</visible>
            </control>
			
		    <control type="grouplist">
                <left>40</left>
                <top>20</top>
                
				<control type="label">
                    <width>1200</width>
                    <height>50</height>
                    <aligny>bottom</aligny>
                    <label>$INFO[PVR.ActStreamServiceName,[COLOR Selected]$LOCALIZE[19099]:[/COLOR] ]</label>
                    <font>Font-ListInfo</font>
                </control>
				
                <control type="label">
                    <width>1200</width>
                    <height>50</height>
                    <aligny>bottom</aligny>
                    <label>$INFO[PVR.ActStreamProviderName,[COLOR Selected]$LOCALIZE[19101]:[/COLOR] ]</label>
                    <font>Font-ListInfo</font>
                </control>
				
                <control type="label">
                    <width>1200</width>
                    <height>50</height>
                    <aligny>bottom</aligny>
                    <label>$INFO[PVR.ActStreamClient,[COLOR Selected]$LOCALIZE[19012]:[/COLOR] ]</label>
                    <font>Font-ListInfo</font>
                </control>
				
                <control type="label">
                    <width>1200</width>
                    <height>50</height>
                    <aligny>bottom</aligny>
                    <label>$INFO[PVR.ActStreamDevice,[COLOR Selected]$LOCALIZE[19006]:[/COLOR] ]</label>
                    <font>Font-ListInfo</font>
                </control>
				
                <control type="label">
                    <width>1200</width>
                    <height>50</height>
                    <aligny>bottom</aligny>
                    <label>$INFO[PVR.ActStreamStatus,[COLOR Selected]$LOCALIZE[19007]:[/COLOR] ]</label>
                    <font>Font-ListInfo</font>
                </control>
				
                <control type="label">
                    <width>1200</width>
                    <height>50</height>
                    <aligny>bottom</aligny>
                    <label>$INFO[PVR.ActStreamEncryptionName,[COLOR Selected]$LOCALIZE[19015]:[/COLOR] ]</label>
                    <font>Font-ListInfo</font>
                </control>
            </control>
			
            <control type="grouplist">
                <left>1150</left>
                <top>20</top>
				<right>40</right>
                <usecontrolcoords>true</usecontrolcoords>
                
				<control type="label">
                    <width>600</width>
                    <height>50</height>
                    <aligny>bottom</aligny>
                    <label>$INFO[PVR.ActStreamBer,[COLOR Selected]$LOCALIZE[19010]:[/COLOR] ]</label>
                    <font>Font-ListInfo</font>
                </control>
				
                <control type="label">
                    <width>600</width>
                    <height>50</height>
                    <aligny>bottom</aligny>
                    <label>$INFO[PVR.ActStreamUnc,[COLOR Selected]$LOCALIZE[19011]:[/COLOR] ]</label>
                    <font>Font-ListInfo</font>
                </control>
				
                <control type="label">
                    <width>600</width>
                    <height>50</height>
                    <aligny>bottom</aligny>
                    <label>$INFO[PVR.ActStreamMux,[COLOR Selected]$LOCALIZE[19100]:[/COLOR] ]</label>
                    <font>Font-ListInfo</font>  
				</control>
				
                <control type="label">
                    <width>600</width>
                    <height>50</height>
                    <aligny>bottom</aligny>
                    <label>$INFO[PVR.ActStreamSignal,[COLOR Selected]$LOCALIZE[19008]:[/COLOR] ]</label>
                    <font>Font-ListInfo</font> 
                </control>
                
				<control type="progress">
                    <top>5</top>
                    <width>450</width>
                    <height>18</height>
                    <info>PVR.ActStreamProgrSignal</info>
                </control>
                
				<control type="label">
                    <top>5</top>
                    <width>1400</width>
                    <height>50</height>
                    <aligny>bottom</aligny>
                    <label>$INFO[PVR.ActStreamSNR,[COLOR Selected]$LOCALIZE[19009]:[/COLOR] ]</label>
                    <font>Font-ListInfo</font>
                </control>
				
                <control type="progress">
                    <top>0</top>
                    <width>450</width>
                    <height>18</height>
                    <info>PVR.ActStreamProgrSNR</info>
                </control>
            </control>
			
			<control type="image">
				<left>30</left>
				<top>360</top>
				<width>1560</width>
				<height>2</height>
				<texture border="0" colordiffuse="$VAR[HighlightColor2]">osd/line.png</texture>
			</control>
			
            <control type="grouplist">
                <left>30</left>
                <top>380</top>
				<width>700</width>
                <usecontrolcoords>true</usecontrolcoords>
				<control type="grouplist">
					<orientation>horizontal</orientation>
					<left>pad</left>
					<control type="label">
						<width>560</width>
						<height>30</height>
						<aligny>bottom</aligny>
						<scroll>yes</scroll>
						<font>Font-ListInfo</font>
						<textcolor>white</textcolor>
						<label>$LOCALIZE[31235] $INFO[VideoPlayer.StartTime] - $INFO[VideoPlayer.EndTime]</label>
					</control>
					<control type="label">
						<width>140</width>
						<height>30</height>
						<aligny>bottom</aligny>
						<scroll>yes</scroll>
						<font>Font-ListInfo</font>
						<label>$INFO[PVR.EpgEventElapsedTime]</label>
					</control>
				</control>
				<control type="label">
					<top>40</top>
					<left>pad</left>
					<right>pad</right>
					<height>30</height>
					<aligny>bottom</aligny>
					<scroll>yes</scroll>
                    <font>Font-ListInfo</font>
					<textcolor>$VAR[HighlightColor]</textcolor>
					<label>$INFO[VideoPlayer.Title]</label>
				</control>				
				<control type="textbox">
					<top>30</top>
					<left>pad</left>
					<right>pad</right>
					<height>388</height>
					<font>Font-ListInfo</font>
					<align>justify</align>
					<scroll>yes</scroll>
					<label>$INFO[VideoPlayer.Plot]</label>
				</control>
			</control>
            <control type="grouplist">
                <right>30</right>
                <top>380</top>
				<width>700</width>
                <usecontrolcoords>true</usecontrolcoords>
				<control type="grouplist">
					<orientation>horizontal</orientation>
					<left>pad</left>
					<control type="label">
						<width>560</width>
						<height>30</height>
						<aligny>bottom</aligny>
						<scroll>yes</scroll>
						<font>Font-ListInfo</font>
						<textcolor>white</textcolor>
						<label>$LOCALIZE[31236] $INFO[VideoPlayer.NextStartTime] - $INFO[VideoPlayer.NextEndTime]</label>
					</control>
					<control type="label">
						<width>140</width>
						<height>30</height>
						<aligny>bottom</aligny>
						<scroll>yes</scroll>
						<font>Font-ListInfo</font>
						<label>$INFO[VideoPlayer.NextDuration]</label>
					</control>
				</control>					
				<control type="label">
					<top>40</top>
					<left>pad</left>
					<right>pad</right>
					<height>30</height>
					<aligny>bottom</aligny>
					<scroll>yes</scroll>
                    <font>Font-ListInfo</font>
					<textcolor>$VAR[HighlightColor]</textcolor>
					<label>$INFO[VideoPlayer.NextTitle]</label>
				</control>				
				<control type="textbox">
					<top>30</top>
					<left>pad</left>
					<right>pad</right>
					<height>388</height>
					<font>Font-ListInfo</font>
					<align>justify</align>
					<scroll>yes</scroll>
					<label>$INFO[VideoPlayer.NextPlot]</label>
				</control>					
			</control>			
		</control>
    </controls>

</window>