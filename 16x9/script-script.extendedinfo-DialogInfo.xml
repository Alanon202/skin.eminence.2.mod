                </control>

                <!-- INFO -->
                <control type="grouplist">
                    <visible>ControlGroup(9000).HasFocus()</visible>
                    <usecontrolcoords>true</usecontrolcoords>
                    <itemgap>pad</itemgap>
                    <orientation>vertical</orientation>
                    <left>pad</left>
                    <right>pad</right>
                    <top>pad</top>
                    <bottom>pad</bottom>
                    <control type="label">
                        <top>pad</top>
                        <left>pad</left>
                        <right>pad</right>
                        <height>36</height>
                        <font>Font-InfoBox-Title</font>
                        <label>$INFO[Window.Property(title)]</label>
                    </control>
                    <control type="label">
                        <left>pad</left>
                        <right>pad</right>
                        <height>32</height>
                        <font>Font-ListInfo-Small-Bold</font>
                        <label>[UPPERCASE][COLOR=$VAR[HighlightColor2]]$INFO[Window.Property(AlsoKnownAs)][/COLOR][/UPPERCASE]</label>
                    </control>
                    <control type="textbox">
                        <top>pad</top>
                        <left>pad</left>
                        <right>pad</right>
                        <height max="266">auto</height>
                        <font>Font-ListInfo</font>
                        <align>justify</align>
                        <label>$INFO[Window.Property(Biography)]</label>
                    </control>
                    <control type="group">
                        <left>pad</left>
                        <right>pad</right>
                        <top>-10</top>
                        <control type="grouplist">
                            <include>Info_DetailsGrouplist</include>
                            

                            <!-- Place of Birth -->
                            <control type="group">
                                <height>36</height>
                                <width>100%</width>
                                <visible>!String.IsEmpty(Window.Property(PlaceOfBirth))</visible>
                                <control type="label">
                                    <width>230</width>
                                    <height>36</height>
                                    <align>left</align>
                                    <font>Font-ListInfo-Small</font>
                                    <textcolor>ListLabel</textcolor>
                                    <label>$ADDON[script.extendedinfo 32014]</label>
                                    <textcolor>ListLabel</textcolor>
                                </control>
                                <control type="label">
                                    <left>250</left>
                                    <align>left</align>
                                    <height>36</height>
                                    <font>Font-ListInfo-Bold</font>
                                    <label>$INFO[Window.Property(PlaceOfBirth)]</label>
                                    <textcolor>SubLabel</textcolor>
                                </control>
                            </control>
                        </control>
                    </control>
                </control>
                <control type="grouplist">
                    <visible>ControlGroup(9000).HasFocus()</visible>
                    <bottom>74</bottom>
                    <left>-20</left>
                    <right>-20</right>
                    <height>128</height>
                    <itemgap>20</itemgap>
                    <align>center</align>
                    <orientation>horizontal</orientation>
                    <control type="group">
                        <visible>!String.IsEmpty(Window.Property(Birthday))</visible>
                        <width>370</width>
                        <height>100%</height>
                        <control type="label">
                            <top>0</top>
                            <height>32</height>
                            <align>center</align>
                            <font>Font-ListInfo-Small</font>
