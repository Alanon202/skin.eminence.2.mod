                        <control type="label">
                            <top>32</top>
                            <height>48</height>
                            <align>center</align>
                            <textcolor>SubLabel</textcolor>
                            <font>Font-InfoBox-Title</font>
                            <label>$INFO[Window.Property(Age)]</label>
